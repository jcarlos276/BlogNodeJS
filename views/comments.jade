extends layout

block content
    .container
        .col-md-6.col-md-offset-3
            h1.display-4.m-b-2 Comentar
            form(method="POST" action="/comment")
                input(type="hidden" name="_id" value=data._id)
                .form-group
                    label(for="autor") Autor
                    input#autor.form-control(type="text", name="autor")
                .form-group
                    label(for="mensaje") Mensaje:
                    input#mensaje.form-control(type="text", name="mensaje")
                .form-group
                    label(for="fecha") Fecha:
                    input#fecha.form-control(type="date", name="fecha")
                button.btn.btn-primary(type="submit", style="margin:10px;") Guardar
                a.btn.btn-danger(href="/", style="margin:10px;") Cancelar