extends layout

block content
    .container
        .row
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 Editar Producto
                form(method='POST' action='/new/news_update')
                    input(type="hidden" name="_id" value= data._id)
                    div.form-group
                        label(for='titulo') Título:
                        input#titulo.form-control(type='text' name='titulo' value= data.titulo)
                    div.form-group
                        label(for='descripcion') Descripción:
                        input#descripcion.form-control(type='text' name='descripcion' value= data.descripcion)
                    div.form-group
                        label(for='categoria') Categoría:
                        input#categoria.form-control(type='text' name='categoria' value= data.categoria)
                    div.form-group
                        label(for='fecha') Fecha:
                        input#fecha.form-control(type='date' name='fecha' value= data.fecha)
                    button.btn.btn-primary(type='submit') Guardar